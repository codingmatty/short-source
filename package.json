{
  "name": "short-source",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "^4.17.5",
    "react": "^16.2.0",
    "react-autobind": "^1.0.6",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^22.2.2",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "rename-cli": "^5.0.0"
  },
  "scripts": {
    "postinstall": "cd functions;npm install;cd ..",
    "dev:css": "npm run build:css && node-sass src/ -o src/ --watch --recursive",
    "dev:scripts": "react-scripts start",
    "dev": "npm-run-all -p dev:css dev:scripts",
    "build:css": "node-sass src/ -o src/",
    "build:scripts": "react-scripts build",
    "build": "npm-run-all build:css build:scripts",
    "watch": "nodemon --watch src --exec \"npm run build\"",
    "postbuild": "./node_modules/.bin/rename build/index.html build/shorten.html",
    "predeploy": "npm run build",
    "deploy": "firebase deploy",
    "fb:serve": "firebase serve --only functions,hosting",
    "serve": "npm-run-all -p watch fb:serve",
    "test": "jest",
    "eject": "react-scripts eject",
    "clean": "rimraf src/**/*.css build",
    "precommit": "lint-staged"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  }
}
