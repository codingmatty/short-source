{
  "name": "moniker-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "classnames": "^2.2.5",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "qs": "^6.5.2",
    "react": "^16.4.0",
    "react-autobind": "^1.0.6",
    "react-automata": "^3.0.0",
    "react-dom": "^16.4.0",
    "react-firebaseui": "^3.0.4",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "recharts": "^1.0.0-beta.10"
  },
  "devDependencies": {
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chronokinesis": "^1.3.2",
    "husky": "^0.14.3",
    "jest": "^22.2.2",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "react-test-renderer": "^16.3.2",
    "rename-cli": "^5.0.0"
  },
  "scripts": {
    "postinstall": "cd functions;npm install;cd ..",
    "dev:css": "npm run build:css && node-sass src/ -o src/ --watch --recursive",
    "dev:scripts": "react-scripts start",
    "dev:web": "npm-run-all -p dev:css dev:scripts",
    "serve": "firebase serve --only functions",
    "dev": "npm-run-all -p dev:web serve",
    "build:css": "node-sass src/ -o src/",
    "build:scripts": "react-scripts build",
    "build": "npm-run-all build:css build:scripts",
    "postbuild": "./node_modules/.bin/rename build/index.html build/app.html",
    "predeploy": "npm run build",
    "deploy": "firebase deploy",
    "test": "jest --coverage",
    "tdd": "jest --coverage --watch",
    "eject": "react-scripts eject",
    "clean": "rimraf src/**/*.css build",
    "precommit": "lint-staged"
  },
  "jest": {
    "projects": [
      {
        "displayName": "app",
        "testMatch": [
          "<rootDir>/src/**/*.test.js"
        ],
        "moduleNameMapper": {
          "\\.(css|less)$": "<rootDir>/src/styleMock.js"
        }
      },
      {
        "displayName": "functions",
        "testMatch": [
          "<rootDir>/functions/**/*.test.js"
        ]
      }
    ]
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:5000/moniker-app/us-central1/",
      "pathRewrite": {
        "^/api": ""
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
