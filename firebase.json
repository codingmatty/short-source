{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": ["npm --prefix $RESOURCE_DIR run lint"]
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/ping",
        "function": "ping"
      },
      {
        "source": "/api/shorten",
        "function": "shorten"
      },
      {
        "source": "/api/stats",
        "function": "stats"
      },
      {
        "source": "/shorten",
        "destination": "/shorten.html"
      },
      {
        "source": "/shorten/**",
        "destination": "/shorten.html"
      },
      {
        "source": "**",
        "function": "sink"
      }
    ]
  }
}
